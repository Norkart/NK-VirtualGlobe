#VRML V2.0 utf8

# A test to make sure that the drag sensors fire isOver events

Transform {
  translation 1 0 0
  children [
    Shape {
      geometry Box {}
      appearance Appearance {
        material DEF MAT1 Material {
          diffuseColor 1 0 0
        }
      }
    }
    DEF PS1 PlaneSensor {}
  ]
}

DEF S Script {
  eventIn SFBool set_isOver
  eventOut SFColor color_changed
  url "javascript:
     function set_isOver(value) {
         if(value) {
           color_changed.r = 0;
           color_changed.g = 1;
           color_changed.b = 0;
         } else {
           color_changed.r = 1;
           color_changed.g = 0;
           color_changed.b = 0;
         }
     }
  "
}

ROUTE PS1.isOver TO S.set_isOver
ROUTE S.color_changed TO MAT1.diffuseColor
