  translation -1 -1 0 
  children Shape {
    appearance DEF invalid_def Appearance {
      material Material {
        diffuseColor 0 1 0
      } 
    }
    geometry Box {
      size 1 1 1
    }
  }
}

Transform {
  translation 1 -1 0
  children StaticGroup {
    children [
      Shape {
        appearance USE invalid_def
        geometry Box {
          size 1 1 1 
        }
      }
    ]
  }
